<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addCifraContentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/addCifraOneChordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/addCifraOneChordSpinner"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:drawSelectorOnTop="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addCifraTwoChordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/addCifraTwoChordSpinner1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/addCifraTwoChordSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addCifraFourChordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/addCifraFourChordSpinner1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/addCifraFourChordSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/addCifraFourChordSpinner3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/addCifraFourChordSpinner4"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawSelectorOnTop="true" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/addCifraLyricsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp" />

</LinearLayout>