<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTalentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CifrasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <marceloferracin.autocifra.layout.SlidingTabLayout
            android:id="@+id/talentSlidingTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/projectMainColor"
            android:elevation="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/talentViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:theme="@style/ListEffect" />

    </LinearLayout>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/circle_button"
        android:contentDescription="@null"
        android:src="@mipmap/ic_add_white_24dp" />

</RelativeLayout>