<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marceloferracin.autocifra">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CifraActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.AddCifraActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.AddCifraWriteActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.AddCifraChordsActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
